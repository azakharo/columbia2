      #animal-page-title.text-xlarge.bold Animals
      // Search Input
      input#animal-search-input.form-control.mlr1(type='text', name='search', placeholder='Search...')
      // Settings button
      button.btn.btn-default#animal-settings-btn(disabled,
      uib-tooltip="Настройки", tooltip-append-to-body="true", tooltip-placement="auto bottom")
        i.glyphicon.glyphicon-cog
    #animal-table.w100(ui-grid="gridOptions", ui-grid-auto-resize, ui-grid-selection,
    ui-grid-resize-columns, ui-grid-move-columns)
    #animal-table-bottom-bar.ptb1
      // Add button
      button.btn.btn-success.mr1(ng-click="onAddBtnClick()") Add...
      // Edit button
      button.btn.btn-defaul.mr1(ng-click="onEditBtnClick(selectedCow)", ng-disabled="!selectedCow") Edit...
      // Del button
      button.btn.btn-danger.mr3(ng-click="onDelBtnClick(selectedCow)", ng-disabled="!selectedCow") Delete...

